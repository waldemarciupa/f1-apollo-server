generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Race {
  id        String @id
  season    String
  round     String
  name      String
  location  String
  country   String
  url       String
  sessions   Session?
}

model Session {
  fp1        String
  fp2        String
  fp3        String
  qualifying String
  gp         String
  race       Race @relation(fields: [raceId], references: [id])
  raceId     String
}